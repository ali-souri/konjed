{% set index_address = system_info.index_address %}
{% set sourse_address = [system_info.view_sourse_address,'/assets']|join %}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>صفحه ورود</title>
    <link href="{{sourse_address}}/css/login.css" type="text/css" rel="stylesheet">
</head>
<body dir="rtl">
<!-- {{dump(additional_info)}}
{{dump(pages)}}
{{dump(url_name)}} -->
    <div class="container">
        <div id="login" class="signin-card">
            <div class="logo-image">
                {# <img src="#" alt="Logo" title="Logo" width="138"> #}
            </div>
            <h1 class="display1">ورود به پنل</h1>
            <p class="subhead">نام کاربری و گذرواژه خود را وارد نمایید</p>
            <form action="{{index_address}}/page/index" method="post" class="" role="form">
                <div id="form-login-username" class="form-group">
                    <input id="username" class="form-control" name="username" type="text" size="18" alt="کلمه عبور" required />
                    <span class="form-highlight"></span>
                    <span class="form-bar"></span>
                    <label for="username" class="float-label">نام کاربری</label>
                </div>
                <div id="form-login-password" class="form-group">
                    <input id="password" class="form-control" name="password" type="password" size="18" alt="گذرواژه" required>
                    <span class="form-highlight"></span>
                    <span class="form-bar"></span>
                    <label for="password" class="float-label">گذرواژه</label>
                </div>
                <p class="subhead alert">نام کاربری یا کلمه عبور نادرست است</p>
                <div>
                    <button class="btn btn-block btn-info ripple-effect" type="submit" name="Submit" alt="sign in">ورود</button>
                </div>
        </form>
        </div>
    </div>
</body>
</html>